{
  "manifest_version": 3,
  "name": "Last Tab",
  "version": "1.0.0",
  "description": "Switch to previously used tab with Ctrl+Q (MRU tab switching like in IDE)",

  "permissions": [
    "tabs",
    "storage"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Last Tab Settings"
  },

  "commands": {
    "quick-switch": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
      },
      "description": "Switch to previous tab"
    },
    "show-mru-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "Show recent tabs list"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
